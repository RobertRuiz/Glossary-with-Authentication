<p id="notice"><%= notice %></p>
<%= link_to 'Add a new term', new_term_path, class: "btn btn-default" %>
<br>

<h1>Terms</h1>

<table class="table table-bordered table-hover table-condensed table-responsive  ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Definition</th>
      <th>Author</th>
      <th>Category</th>
      <th>Web link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @terms.each do |term| %>
    <% if term.name.blank? %>
      <tr class="danger ">
    <% else %>
      <tr>
    <% end %>
      <tr>
        <td><%= term.name %></td>
        <td><%= term.definition %></td>
        <td><%= term.author %></td>
        <td><%= term.category_id %></td>
        <td><%= term.web_link %></td>
        <td><%= link_to 'Show', term %></td>
        <td><%= link_to 'Edit', edit_term_path(term) %></td>
        <td><%= link_to 'Destroy', term, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
